# vim: filetype=neomuttrc

# Minimal configuration for Neomutt/Mutt and Gmail/G Suite

# Decrypts passwords quietly
# see: https://wiki.archlinux.org/index.php/Mutt#Passwords_management
# source "gpg -dq $HOME/.my-pwds.gpg |"
#
set realname = "Maruan"
set from = "maruanbakriottoni@gmail.com"
set use_from = yes
set envelope_from = yes

set smtp_url = "smtps://maruanbakriottoni@gmail.com@smtp.gmail.com:465/"
set smtp_pass = "maruan2810"
set imap_user = "maruanbakriottoni@gmail.com"
set imap_pass = "maruan2810"
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set ssl_force_tls = yes

# G to get mail
bind index G imap-fetch-mail
set editor = "vim"
set charset = "utf-8"
set record = ''
source /usr/share/mutt-wizard/mutt-wizard.muttrc # mw-autogenerated
source /home/maruan/.config/mutt/accounts/1-gmail.muttrc # mw-autogenerated
macro index,pager i1 '<sync-mailbox><enter-command>source /home/maruan/.config/mutt/accounts/1-gmail.muttrc<enter><change-folder>!<enter>;<check-stats>' "switch to maruanbakriottoni@gmail.com" # mw-autogenerated
